#!/bin/sh
set -ux

WINDOW_TITLE="main-tmux"
TMUX_WINDOW=$(xdotool search --name "$WINDOW_TITLE")

if [ "$TMUX_WINDOW" = "" ]; then
    xfce4-terminal --geometry="240x50+100+0" --title="$WINDOW_TITLE" --role="$WINDOW_TITLE" --command="attach-tmux" &
    kill $$
fi

ACTION=windowactivate

exec xdotool $ACTION $TMUX_WINDOW --sync

